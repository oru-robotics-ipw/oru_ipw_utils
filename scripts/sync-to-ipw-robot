#!/bin/bash

echo "Syncing to robot, please stand by (may take a moment)"
rsync -arvh --delete-after --stats --progress -e ssh \
	--exclude '*bags/' \
	--exclude .catkin_tools/ \
	--exclude .gdb_history \
	--exclude .idea/ \
	--exclude .vscode/ \
	--exclude /build/ \
	--exclude /devel/ \
	--exclude /logs/ \
	"$@" \
	"${LOCAL_PATH:-$HOME/ipw/ws/}" "${ROBOT_NAME:-automower2}:${ROBOT_PATH:-ipw/ws/}"
